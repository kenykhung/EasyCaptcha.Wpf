<Window x:Class="EasyCaptcha.Wpf.TestProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyCaptcha.Wpf.TestProgram"
        xmlns:ec="clr-namespace:EasyCaptcha.Wpf;assembly=EasyCaptcha.Wpf"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="TestProgram" Height="200" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="CHANGE" Width="80" Height="30" Margin="20" Click="Button_Click"/>
            <ec:Captcha x:Name="Captcha" Width="200" Height="50"/>
            <TextBlock Name="AnswerTextBlock" Margin="5" Width="100" Height="25" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
